[Unit]
Description=Tevin TCP Server Bridge
After=syslog.target

[Service]
Type=simple
User=tcpserverbridgeuser
Group=tcpserverbridgeuser
WorkingDirectory=/etc/tcp_server_bridge
ExecStart=/etc/tcp_server_bridge/pyserver.py
SyslogIdentifier=tcpserverbridge
StandardOutput=syslog
StandardError=syslog
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target  
